<html>
<head>
<title>Mint Coin Web UI</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <style>
    /* Remove the navbar's default margin-bottom and rounded borders */ 
    .navbar {
      margin-bottom: 10;
      border-radius: 5;
    }
    
  </style>
</head>
<body>

<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a  class="navbar-brand" href="">Welcome to Mint Coin Users Details Screen</a>
    </div>
  </div>
</nav>


<div>
  <p id = "head" hidden>asdasd</p>
</div>

<div class="form-group">
  <label for="selectNumber">Select the User Name: </label>
  <select class="form-control" id="selectNumber" onchange=myFunction()>
  </select>
</div>

<script>
            var select = document.getElementById("selectNumber"); 
            var options = new Array();
            options = '<%= @users %>'; 

            // Optional: Clear all existing options first:
            select.innerHTML = "";
            // Populate list with options:
            for(var i = 0; i < options.length; i++) {
                var opt = options[i];
                select.innerHTML += "<option value=\"" + opt + "\">" + opt + "</option>";
            }

            function myFunction() {
                var x = document.getElementById("selectNumber").value;
                //document.getElementById("demo").innerHTML = "You selected: " + x;
                document.getElementById("head").hidden = false;
                document.getElementById("head").innerHTML = "Welcome User " + x;
                document.getElementById("section").hidden = false;
            }
            </script>

<div id = "section" hidden>
      <%# <input class="form-control mr-sm-2" type="search" placeholder="Enter User ID" aria-label="Search"> %>
      <button onclick = getBalance()>Show Wallet Balance</id>
      <button>Do Transaction</button>
      <button>Search</button>
      <script>
          function getBalance() {
             var user = document.getElementById("selectNumber").value;
             location.href='http://localhost:4000/user/balance/' + user ;
          }
      </script>
</div>

</head>
</html>